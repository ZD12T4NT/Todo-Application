{
  "compilerOptions": {
    
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
   
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",  // Use "node" for Node.js-style resolution
    "esModuleInterop": true,     // Enables compatibility for CommonJS and ES Modules
    "module": "esnext",          // Use ESNext module system
    "target": "es6",             // Target ECMAScript 6
    "strict": true,              // Enables strict mode
    "skipLibCheck": true,        // Skips type checking for declaration files
    "resolveJsonModule": true    // Resolves .json files
  },
  "include": [
    "src"
  ],
  "types": [
    "@shadcn/ui"
  ],

}
